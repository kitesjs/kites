{
  "name": "@kites/core",
  "version": "1.3.1",
  "displayName": "Kites",
  "description": "Template-based Web Application Framework",
  "main": "src/main.js",
  "scripts": {
    "copy": "copyfiles README.md LICENSE dist",
    "lint": "tslint -p tsconfig.json -c tslint.json \"packages/**/*.ts\" -e \"*.spec.ts\"",
    "format": "prettier **/**/*.ts --ignore-path ./.prettierignore --write && git status",
    "tsc": "tsc",
    "start": "npm run start:dev",
    "start:dev": "ts-node app.ts",
    "todo": "ts-node sample/01-todo-app/app.ts",
    "test": "cross-env discover=false mocha \"./packages/**/*.spec.ts\" --reporter spec --retries 3 --require ts-node/register --require node_modules/reflect-metadata/Reflect.js --exit",
    "test:common": "cross-env discover=false mocha \"./packages/common/**/*.spec.ts\" --reporter spec --require ts-node/register --require node_modules/reflect-metadata/Reflect.js --exit",
    "clean": "gulp clean:bundle",
    "build": "npm run clean && gulp build",
    "prebuild:dev": "rimraf node_modules/@kites",
    "build:dev": "gulp build:dev --dist node_modules/@kites",
    "prerelease": "gulp copy-misc && gulp build --dist node_modules/@kites",
    "publish": "npm run prerelease && npm run build && npx lerna publish --force-publish --exact -m \"chore(@kitesjs) publish %s release\"",
    "publish:rc": "npm run prerelease && npm run build && npx lerna publish --dist-tag=rc -m \"chore(@kitesjs) publish %s release\"",
    "publish:next": "npm run prerelease && npm run build && npx lerna publish --dist-tag=next --skip-git -m \"chore(@kitesjs) publish %s release\"",
    "publish:beta": "npm run prerelease && npm run build && npx lerna publish --dist-tag=beta --loglevel verbose -m \"chore(@kitesjs) publish %s release\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kitesjs/kites.git"
  },
  "keywords": [
    "kites",
    "templates",
    "extensions",
    "plugins"
  ],
  "author": "vunb",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kitesjs/kites/issues"
  },
  "homepage": "https://kites.nodejs.vn",
  "files": [
    "src",
    "README.md"
  ],
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/chai": "^4.2.12",
    "@types/chai-as-promised": "^7.1.3",
    "@types/debug": "^0.0.31",
    "@types/events": "^3.0.0",
    "@types/express": "^4.17.7",
    "@types/glob": "^7.1.3",
    "@types/lodash": "^4.14.158",
    "@types/minimatch": "^3.0.3",
    "@types/mkdirp": "^1.0.1",
    "@types/mocha": "^5.2.7",
    "@types/nconf": "^0.10.0",
    "@types/node": "^12.12.53",
    "@types/std-mocks": "^1.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "copyfiles": "^2.3.0",
    "cross-env": "^7.0.2",
    "delete-empty": "^2.0.0",
    "gulp": "^4.0.2",
    "gulp-clang-format": "^1.0.27",
    "gulp-clean": "^0.4.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^5.0.1",
    "gulp-watch": "^5.0.1",
    "lerna": "^3.22.1",
    "lodash.template": "^4.5.0",
    "mem": "^6.1.0",
    "mocha": "^5.2.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "std-mocks": "^1.0.1",
    "supertest": "^3.4.2",
    "ts-node": "^8.10.2",
    "tslint": "^5.20.1",
    "typescript": "^3.9.7",
    "typescript-eslint-parser": "^20.1.1"
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
    "axios": "^0.19.2",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "debug": "^3.2.6",
    "express": "^4.17.1",
    "lodash": "^4.17.19",
    "mkdirp": "^1.0.4",
    "nconf": "^0.10.0",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.3.3"
  }
}
